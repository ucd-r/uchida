package jp.co.ulsystems.rie_uchida.janken;

public class Player {
	private String name;
	private Hand hand;
	private int score;

	public Player(String name, Hand hand) {
		this.name = name;
		this.hand = hand;
	}

	public String getName(String name) {
		return name;
	}

	public String showHand() {
		return hand.chooseHand();
	}

	public void addPoint() {
		score += 1;
	}



}

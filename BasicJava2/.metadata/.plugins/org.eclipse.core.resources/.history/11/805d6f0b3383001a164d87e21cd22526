package jp.co.ulsystems.rie_uchida.dicegame;

import java.util.ArrayList;

public class GameRecorder {

	public static void printGameScore(Player player) {
		System.out.print(player.getPlayerName() + "さん：" + player.getLastDiceNum() + "(" + player.getScore() + ")  ");
	}
	
	public static void printWinners(ArrayList<String> winners) {
		for(String winner :winners) {
			System.out.print(winner + "さん ");
		}
		System.out.println("が勝ちました！");
		
	}
}
